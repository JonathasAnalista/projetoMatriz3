rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // BLOQUEAR coleções de desempenho/acessos
    match /desempenho/{doc} {
      allow read, write: if false;
    }
    match /desempenhos/{doc} {
      allow read, write: if false;
    }
    match /scores/{doc} {
      allow read, write: if false;
    }
    match /acessos/{doc} {
      allow read, write: if false;
    }

    // Regra genérica para as demais coleções autenticadas
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

